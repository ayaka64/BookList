<p id="notice"><%= notice %></p>

<div class="header">
  <h1>本の一覧</h1>
</div>

<div class="main">
  <div class="container">
    <table>
      <thead>
        <tr> <!--テーブル横一行を包括-->
          <!--テーブルの見出し-->
          <th>本のタイトル</th>
          <th>著者</th>
          <th>販売元</th>
          <th>値段</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.selling %></td>
            <td><%= book.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
<div class="new-book">
  <%= link_to '新しい本を登録', new_book_path %>
</div>
